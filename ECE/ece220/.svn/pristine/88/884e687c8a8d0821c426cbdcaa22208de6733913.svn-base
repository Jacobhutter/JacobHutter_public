			bigarr[k][l] = 0;       
  }                                       
 }                           
	 for(k=0;k<rows;k++){
		for(l=0;l<cols;l++){
			bigarr[k+1][l+1] = arr[k][l];       // attempt for graph like this if all ones
  }                                        // 0000
 }                                         // 0110
	                                         // 0110
      if(bigarr[i+2][j+2])                 // 0000
				counter += 1;
			if(bigarr[i+2][j+1])
				counter += 1;
			if(bigarr[i+2][j])
				counter +=1;
			if(bigarr[i+1][j+2])
				counter +=1;
			if(bigarr[i+1][j])
				counter += 1;             // checks surrounding cells 
			if(bigarr[i][j+2])
				counter +=1;
			if(bigarr[i][j+1])
