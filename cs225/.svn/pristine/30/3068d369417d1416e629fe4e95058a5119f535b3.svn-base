template <class K, class V>
void AVLTree<K, V>::insert(Node*& subtree, const K& key, const V& value)
{

    if(key < subtree->key){
      if(!subtree->left){
        subtree->left = new Node(key,value);
        return;
      }
      subtree->height++;
      insert(subtree->left, key, value);
    }
    else{
      if(subtree->key == key)
        return;
      if(!subtree->right){
        subtree->right = new Node(key,value);
        return;
      }
      subtree->height++;
      insert(subtree->right,key,value);
    }
    if(key > subtree->left->key || key < subtree->right->key)
      rebalance(subtree,1);
    else
      rebalance(subtree,0);

}

template <class K, class V>
void AVLTree<K, V>::remove(const K& key)
{
    remove(root, key);
}


template <class K, class V>
void AVLTree<K, V>::rightMostChild(Node*& subtree){
  if(subtree->right)
    return rightMostChild(subtree->right);
  else
    return subtree;
}

template <class K, class V>
void AVLTree<K, V>::remove(Node*& subtree, const K& key)
{
    if (subtree == NULL)
        return;

    if (key < subtree->key) {
        remove(subtree->left,key);
    } else if (key > subtree->key) {
        remove(subtree->right,key);
    } else {
        if (subtree->left == NULL && subtree->right == NULL) {
            Node * temp = subtree;
            subtree = NULL;
            delete temp;
            // your code here
        } else if (subtree->left != NULL && subtree->right != NULL) {
            /* two-child remove */
            Node * iop = rightMostChild(subtree->left);
            K search = subtree->key;
            subtree->key = iop->key;
            iop->key = search;
            remove(iop,search);
        } else {
            /* one-child remove */
            Node * temp = subtree;
            if(subtree->left == NULL) subtree = subtree->right;
            else subtree = subtree->left;
            delete temp;
        }
        return;
