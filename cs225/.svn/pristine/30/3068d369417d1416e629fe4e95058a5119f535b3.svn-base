template <class K, class V>
void AVLTree<K, V>::rebalance(Node*& subtree, bool dogleg)
{
    int ratio = heightOrNeg1(subtree->left) - heightOrNeg1(subtree->right);
    if(ratio > 1 && !dogleg)
      rotateRight(subtree);
    else if (ratio < -1 && !dogleg)
      rotateLeft(subtree);
    else if (ratio > 1 && dogleg)
      rotateLeftRight(subtree);
    else if(ratio < -1 && dogleg)
      rotateRightLeft(subtree);
    return;
}


